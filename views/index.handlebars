<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <h1 id="title1">
      Yum Yum, Burgers!

    </h1>

  </div>
  <div class="col-md-2"></div>

</div>


<div id= "burgerRow" class="row">
  <div class="col-md-1"></div>
  <div class="col-md-4">

    <h2 id="smallerLabels">Devour a Burger!</h2>



    <ul>
      {{#each burger}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>
  <div class="col-md-1"></div>
  <div class="col-md-4">

    <h2 id="smallerLabels">Burgers You Ate!</h2>

    <ul>
      {{#each burger}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>


  </div>
  <div class="col-md-1"></div>
</div>



<div id="burgerRow2" class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <h2 id="title3">Add a Burger</h2>
    <form id="create-form">



      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div id="burgerAdd"class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" id="devoured" checked> Add burger to eat!<br>


        <button id="button1" type="submit">Add burger</button>
      </div>
    </form>

  </div>
  <div class="col-md-2"></div>

</div>

